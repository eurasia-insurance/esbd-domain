<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
	version="2.1">

	<persistence-unit name="esbdPU" transaction-type="JTA">

		<jta-data-source>esbd/jdbc/DataSource_MYSQL</jta-data-source>

		<class>tech.lapsa.javax.jpa.converters.InstantAttributeConverter</class>
		<class>tech.lapsa.javax.jpa.converters.LocalDateAttributeConverter</class>
		<class>tech.lapsa.javax.jpa.converters.LocalDateTimeAttributeConverter</class>

		<class>tech.lapsa.kz.taxpayer.converter.jpa.TaxpayerNumberAttributeConverter</class>
		<class>tech.lapsa.kz.vehicle.converter.jpa.VehicleRegNumberAttributeConverter</class>

		<class>com.lapsa.international.phone.converter.jpa.PhoneNumberAttributeConverter</class>

		<class>tech.lapsa.esbd.jpa.EsbdVersion</class>

		<class>tech.lapsa.esbd.domain.ADomain</class>
		<class>tech.lapsa.esbd.domain.AEntity</class>

		<class>tech.lapsa.esbd.domain.embedded.ADocumentInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.CancelationInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.ContactInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.ContractInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.DriverLicenseInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.GPWParticipantCertificateInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.HandicappedCertificateInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.IdentityCardInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.OriginInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.PensionerCertificateInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.PersonalInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.PrivilegerDocumentInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.RecordOperationInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.VehicleCertificateInfo</class>
		<class>tech.lapsa.esbd.domain.embedded.VehicleEngineInfo</class>

		<class>tech.lapsa.esbd.domain.dict.ADictEntity</class>
		<class>tech.lapsa.esbd.domain.dict.BranchEntity</class>
		<class>tech.lapsa.esbd.domain.dict.CompanyActivityKindEntity</class>
		<class>tech.lapsa.esbd.domain.dict.InsuranceCompanyEntity</class>

		<class>tech.lapsa.esbd.domain.complex.InsuranceAgentEntity</class>
		<class>tech.lapsa.esbd.domain.complex.PolicyDriverEntity</class>
		<class>tech.lapsa.esbd.domain.complex.PolicyEntity</class>
		<class>tech.lapsa.esbd.domain.complex.PolicyVehicleEntity</class>
		<class>tech.lapsa.esbd.domain.complex.SubjectCompanyEntity</class>
		<class>tech.lapsa.esbd.domain.complex.SubjectEntity</class>
		<class>tech.lapsa.esbd.domain.complex.SubjectPersonEntity</class>
		<class>tech.lapsa.esbd.domain.complex.UserEntity</class>
		<class>tech.lapsa.esbd.domain.complex.VehicleEntity</class>
		<class>tech.lapsa.esbd.domain.complex.VehicleManufacturerEntity</class>
		<class>tech.lapsa.esbd.domain.complex.VehicleModelEntity</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<validation-mode>NONE</validation-mode>

		<properties>
			<property
				name="javax.persistence.schema-generation.database.action"
				value="create" />
			<property
				name="javax.persistence.schema-generation.scripts.action"
				value="none" />
			<property name="eclipselink.logging.parameters" value="true" />
			<property name="eclipselink.weaving" value="static" />
		</properties>

	</persistence-unit>

</persistence>
